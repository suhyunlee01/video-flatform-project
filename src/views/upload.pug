extends base.pug
block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title", placeholder="Title", type="text", maxlength=40, required)
        input(name="description", placeholder="Description", type="text", maxlength=200, required)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", type="text", required)
        input(value="save", type="submit") 